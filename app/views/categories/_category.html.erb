<div class="categoryTitle">
	<%= link_to "<i class=\"glyphicon glyphicon-remove\"></i>".html_safe, category, method: :delete, remote: true%>
	<%= category.name %>
		<a data-toggle="collapse-next" data-target=".shelf" class="collapseButton">
		<i class="glyphicon glyphicon-chevron-down"></i>
		</a>
	</div>

	<div class="shelf collapse in">
		<div class="borderTop center-block"></div>
		<% category.books.each do |book| %>
			<%= render book, book: book %>
			<div class="borderBetween center-block">
			</div>
		<% end %>
		<%= form_for([category, category.books.build], remote: true) do |f| %>
		    <%= f.url_field :link %> <%= f.submit "Add", :class => 'submitButton btn btn-default'%>
		<% end %>
		<div class="borderBottom center-block "></div>
	</div>



