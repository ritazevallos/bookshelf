<%= form_for([chapter.book.category, chapter.book, chapter], remote: true ) do |f| %>
	<% if chapter.isLink == true %>
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :link %>
    		<%= f.url_field :link, class: 'form-control' %> 
    	</div>
	<% end %>

	<div class="form-group">	
    	<%= f.text_area :content, rows: 5, class: 'form-control text_area' %> 
	</div>

	<%= f.submit "Save Chapter", class: 'submitButton btn btn-default' %>
<% end %>