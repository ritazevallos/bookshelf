<%= form_for [book.category, book], remote: true do |f| %>
	<ul class="errors"></ul>
	<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>
	</div>

	<div class="form-group">
	<p><%= f.label :description %><br>
	<%= f.text_area :description, class: 'form-control text_area' %></p>
	</div>

	<div class="form-group">
	<p><%= f.label :link %><br>
	<%= f.url_field :link, class: 'form-control' %></p>
	</div>

	<p><%= f.submit "Save", :class => 'submitButton btn btn-default'%></p>
<% end %>