var $bookdiv = $('div.book[data-id="<%= @book.id %>"]');
$("#errors").html("");
<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>

   $("#errors").append($("<li />").html("<%= message.html_safe %>"))
  alert('error');
 <% end %>
<% else %>
	$bookdiv.remove();
<% end %>
