var $bookdiv = $('div.book[data-id="<%= @book.id %>"]');
$("#errors").html("")

<% if @book.errors.any? %>
	<% @book.errors.full_messages.each do |message| %>
		$("#errors").append($("<li />").html("<%= message.html_safe %>"))
	<% end %>
<% else %>
	$bookdiv.html("<%= escape_javascript(render 'book', book: @book) %>");
	$bookdiv.find('.editform').hide();
<% end %>